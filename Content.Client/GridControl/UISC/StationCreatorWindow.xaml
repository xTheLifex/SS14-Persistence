<DefaultWindow xmlns="https://spacestation14.io"
            MinSize="400 150" Access="Public">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'access-overrider-window-privileged-id'}" />
            <Button Name="PrivilegedIdButton" Access="Public"/>
        </BoxContainer>
        <Control VerticalExpand="True"/>
        <Label Name="MissingPrivilegesLabel" Text =" " />
        <BoxContainer Orientation="Horizontal">
            <Label Text="Initial Station Owner: " />
            <Label Name="OwnerLabel" Text="" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="New Station Name: " />            
            <LineEdit Name="StationNameLineEdit" HorizontalExpand="True" Access="Public"/>
        </BoxContainer>

        <Button Name="FinishBtn" Text="Finalize Station" Access="Public" />
    </BoxContainer>
</DefaultWindow>
