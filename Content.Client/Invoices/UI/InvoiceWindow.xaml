<DefaultWindow xmlns="https://spacestation14.io"
            MinSize="700 290" Access="Public">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Text="Invoice Reason: " StyleClasses="LabelKeyText"/>
            <Control HorizontalExpand="True"/>
            <Label Name="ReasonLabel" />

        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="Invoice Cost:" StyleClasses="LabelKeyText"/>
            <Control HorizontalExpand="True"/>
            <Label Name="CostLabel"  />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="Paid to:" StyleClasses="LabelKeyText"/>
            <Control HorizontalExpand="True"/>
            <Label Name="PaidToLabel" />
        </BoxContainer>
        <Control VerticalExpand="True"/>
        <BoxContainer Orientation="Horizontal">
            <Label Text="Paying Account:" StyleClasses="LabelKeyText"/>
            <OptionButton Name="PossibleAccounts" Access="Public"/>
            <Label Name="PaidByLabel" Text="Station Name" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Button Name="PayButton" Access="Public" Text="Pay Invoice"/>
            <Label Name="PaidLabel" Text="*Paid*" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
